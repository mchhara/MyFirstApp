<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Cykle">

    <TextView
        android:id="@+id/displayPause"
        android:layout_width="381dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="12dp"
        android:hint="displayPause"
        android:text=" "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/displayResume" />

    <TextView
        android:id="@+id/displayResume"
        android:layout_width="381dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:hint="displayResume"
        android:text=" "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mainStop" />

    <TextView
        android:id="@+id/mainStop"
        android:layout_width="381dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:text=" "
        android:hint="mainStop"
        app:layout_constraintTop_toBottomOf="@+id/mainPause"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/mainPause"
        android:layout_width="381dp"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:hint="mainPause"
        android:text=" "
        app:layout_constraintTop_toBottomOf="@+id/mainResume"
        tools:layout_editor_absoluteX="18dp" />

    <TextView
        android:id="@+id/mainResume"
        android:layout_width="381dp"
        android:layout_height="40dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:hint="mainResume"
        android:text=" "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cykleCreate" />

    <TextView
        android:id="@+id/cykleCreate"
        android:layout_width="381dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:text=""
        android:hint="cykleCreate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>